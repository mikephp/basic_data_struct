#
# Makefile for Freecap
#
!include "..\config.h"

# ----------------------------------------------------------------------------
# ::>> Folders for source code, include, and unit lookups
# ----------------------------------------------------------------------------
INCLUDE_DIRS = .;..\Components\WinXP;..\Components\xmlconf
OUT_DIR      = ..\..\exe\

# ----------------------------------------------------------------------------
# ::>> Main project filename
# ----------------------------------------------------------------------------
PROJECT  = inject.dpr


# ----------------------------------------------------------------------------
# ::>> Main project
# ----------------------------------------------------------------------------
inject:
	@echo ***************************************************************
	@echo **  Compiling the $(PROJECT)...
	@echo ***************************************************************
	$(DCC) $(DFLAGS) -$C+ -U$(INCLUDE_DIRS) -I$(INCLUDE_DIRS) -E$(OUT_DIR) $(PROJECT)
	@echo The executable was placed to $(OUT_DIR)
